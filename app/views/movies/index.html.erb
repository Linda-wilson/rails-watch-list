

<div class="container">
<h2>Movie List</h2>
<div class="card-trip">
<% @movies.each do |movie|  %>
  <img src= "<%= movie.poster_url%>" class="img-fluid" />
  <div class="card-movie-infos">
    <div>
      <h2><%= link_to movie.title, movie_path(movie) %></h2>
      <p><%= movie.overview %></p>
      <p><%= movie.rating %></p>
    </div>
  </div>
  <% end %>
</div>
</div>
